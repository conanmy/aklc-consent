<mvc:View controllerName="aklc.cm.components.partner.controller.SelectList" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Panel class="select-list-page">
        <Toolbar class="sapUiExploredInfo">
            <Title text="Add New Partner" />
        </Toolbar>
        <Toolbar>
            <SearchField liveChange="onSearch" width="100%" />
            <FacetFilter
                id="idFacetFilter"
                type="Light"
                showPersonalization="true"
                showReset="true"
                reset="handleFacetFilterReset"
                lists="{/PartnerFunctionFilters}">
                <lists>
                    <FacetFilterList
                        title="{Type}"
                        key="{Key}"
                        listClose="handleListClose">
                    </FacetFilterList>
                </lists>
            </FacetFilter>
        </Toolbar>
        <List id="selectList" items="{/PartnerFunctions}" selectionChange="onSelectionChange" mode="SingleSelectMaster" includeItemInSelection="true">
            <items>
                <StandardListItem title="{Description}" />
            </items>
        </List>
    </Panel>
</mvc:View>
