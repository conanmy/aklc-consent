<mvc:View controllerName="aklc.cm.controller.SelectList" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page showHeader="false" class="select-list-page">
        <subHeader>
            <Toolbar>
                <SearchField liveChange="onSearch" width="100%" />
                <FacetFilter
                    id="idFacetFilter"
                    type="Light"
                    showPersonalization="true"
                    showReset="true"
                    reset="handleFacetFilterReset"
                    lists="{/PartnerFunctionFilters}">
                    <lists>
                        <FacetFilterList
                            title="{Type}"
                            key="{Key}"
                            multiselect="true"
                            listClose="handleListClose">
                        </FacetFilterList>
                    </lists>
                </FacetFilter>
            </Toolbar>
        </subHeader>
        <content>
            <List id="selectList" items="{/PartnerFunctions}" selectionChange="onSelectionChange" mode="SingleSelectMaster" includeItemInSelection="true">
                <items>
                    <StandardListItem title="{Description}" />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>