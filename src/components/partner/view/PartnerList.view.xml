<mvc:View controllerName="aklc.cm.components.partner.controller.PartnerList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:suite="aklc.cm.components.partner.controls">
    <IconTabBar select="handleIconTabBarSelect">
        <items>
            <IconTabFilter text="All" key="All" />
            <IconTabFilter text="Active" key="Active" />
            <IconTabFilter text="Historic" key="Historic" />
        </items>
        <content>
            <List id="partnerList" mode="Delete"
            delete="handleDelete" items="{path:'AssignedPartners', parameters: {operationMode: 'Client', expand: 'Partners,PartnerFunctions'}}" updateFinished="onUpdateFinished">
                <items>
                    <suite:PartnerObjectListItem type="Active" title="{PartnerFunctions/Description}" press="onListItemPress" class="assigned-partner-list-item" deletable="{= !${Mandatory} }">
                        <suite:attributes>
                            <ObjectAttribute text="{Partners/FirstName} {Partners/LastName} ( {PartnerNumber} )" title="Name" visible="{= !${Unassigned} }" />
                        </suite:attributes>
                    </suite:PartnerObjectListItem>
                </items>
            </List>
        </content>
    </IconTabBar>
</mvc:View>
