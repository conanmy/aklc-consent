<mvc:View controllerName="scenario.xmlview.controller.NameSelectList" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page showHeader="false" class="select-list-page">
        <subHeader>
            <Toolbar>
                <SearchField liveChange="onSearch" width="100%" />
            </Toolbar>
        </subHeader>
        <content>
            <List id="nameSelectList" items="{path: 'PartnerRelations', parameters: { expand: 'Partners'}}" selectionChange="onSelectionChange" mode="SingleSelectMaster" includeItemInSelection="true">
                <infoToolbar>
                    <Toolbar visible="false" id="idInfoToolbar">
                        <Label id="idFilterLabel" />
                    </Toolbar>
                </infoToolbar>
                <items>
                    <StandardListItem title="{Partners/FirstName} {Partners/LastName} ( {PartnerNumber} )" />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>