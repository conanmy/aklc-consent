<mvc:View controllerName="scenario.xmlview.controller.SelectList" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page showHeader="false" class="select-list-page">
        <subHeader>
            <Toolbar>
                <SearchField liveChange="onSearch" width="100%" />
            </Toolbar>
        </subHeader>
        <content>
            <List id="selectList" items="{/PartnerFunctions}" selectionChange="onSelectionChange" mode="SingleSelectMaster" includeItemInSelection="true">
                <items>
                    <StandardListItem title="{Description}" />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>