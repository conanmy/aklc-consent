<mvc:View controllerName="" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <List id="idList" items="{/Parties}">
        <items>
            <ObjectListItem
                title="{Function}"
                press="onListItemPress">
                <attributes>
                    <ObjectAttribute text="{Name}" title="Name" />
                    <ObjectAttribute text="{ID}" title="ID" />
                    <ObjectAttribute text="{Address}" title="Address" />
                </attributes>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>