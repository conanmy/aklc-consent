<mvc:View controllerName="scenario.xmlview.controller.PartnerList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List id="idList" items="{path: '/AssignedPartners', sorter: [{path:'PartnerNumber', descending: true}],  parameters: { expand: 'PartnerFunctions,Partners'}}">
        <items>
            <ObjectListItem title="{PartnerFunctions/Description}" press="onListItemPress">
                <attributes>
                    <ObjectAttribute text="{Partners/FirstName} {Partners/LastName} ( {PartnerNumber} )" title="Name" />
                    <ObjectAttribute text="{Partners/Address1}" title="Address" />
                </attributes>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>
