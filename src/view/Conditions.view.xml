<mvc:View controllerName="scenario.xmlview.controller.Conditions" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:ck="openui5.ckeditor" xmlns:layout="sap.ui.layout" xmlns:commons="sap.ui.commons" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1" xmlns:mvc="sap.ui.core.mvc">
    <commons:RowRepeater design="Transparent" rows="{/Conditions}" numberOfRows="3">
        <f:Form>
            <f:layout>
                <f:ResponsiveGridLayout columnsM="2" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Label text="Condition">
                                <layoutData>
                                    <layout:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <Input type="Text" value="{Title}">
                                    <layoutData>
                                        <layout:GridData span="L9 M9 S12" />
                                    </layoutData>
                                </Input>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <Label text="Group">
                                <layoutData>
                                    <layout:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <Text text="{Group}">
                                    <layoutData>
                                        <layout:GridData span="L9 M9 S12" />
                                    </layoutData>
                                </Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <Label text="Valid from date">
                                <layoutData>
                                    <layout:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <Input type="Date" value="{ValidFrom}">
                                    <layoutData>
                                        <layout:GridData span="L9 M9 S12" />
                                    </layoutData>
                                </Input>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <Label text="Valid to date">
                                <layoutData>
                                    <layout:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <Input type="Date" value="{ValidTo}">
                                    <layoutData>
                                        <layout:GridData span="L9 M9 S12" />
                                    </layoutData>
                                </Input>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <Label text="Final indicator">
                                <layoutData>
                                    <layout:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <Switch state="{Final}">
                                    <layoutData>
                                        <layout:GridData span="L9 M9 S12" />
                                    </layoutData>
                                </Switch>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                    <f:layoutData>
                        <layout:GridData span="L6 M5 S12" />
                    </f:layoutData>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Label text="Text">
                                <layoutData>
                                    <layout:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Label>
                            <f:fields>
                                <ck:CKEditor value="{Text}" toolbar="myToolbar" height="116px"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                    <f:layoutData>
                        <layout:GridData span="L6 M7 S12" />
                    </f:layoutData>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Button text="save" press="saveIt" />
                        </f:FormElement>
                    </f:formElements>
                    <f:layoutData>
                        <layout:GridData span="L12 M12 S12" />
                    </f:layoutData>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </commons:RowRepeater>
</mvc:View>
