<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:commons="sap.ui.commons" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
    <template:if test="{= ${field>Type} === 'input'}">
        <template:then>
            <Input id="{field>Attribute}" value="{field>Value}">
            </Input>
        </template:then>
        <template:elseif test="{= ${field>Type} === 'checkbox'}">
            <Switch id="{field>Attribute}" state="{field>Value}" customTextOn="Yes" customTextOff="No">
            </Switch>
        </template:elseif>
        <template:elseif test="{= ${field>Type} === 'combo'}">
            <ComboBox id="{field>Attribute}" selectedKey="{field>Value}">
                <template:repeat list="{field>Lookup}" var="lu">
                    <core:Item key="{lu>Key}" text="{lu>Value}" />
                </template:repeat>
            </ComboBox>
        </template:elseif>
        <template:elseif test="{= ${field>Type} === 'multi_combo'}">
            <MultiComboBox id="{field>Attribute}" selectedKeys="{field>Value}">
                <items>
                    <template:repeat list="{field>Lookup}" var="lu">
                        <core:Item key="{lu>Key}" text="{lu>Value}" />
                    </template:repeat>
                </items>
            </MultiComboBox>
        </template:elseif>
    </template:if>
</core:FragmentDefinition>
