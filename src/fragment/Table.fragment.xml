<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
    <columns>
        <template:repeat list="{target>property}" var="field">
            <Column>
                <Text text="{path: 'field>name'}" />
            </Column>
        </template:repeat>
    </columns>
    <items>
        <ColumnListItem>
            <cells>
                <template:repeat list="{target>property}" var="field">
                    <Text text="{= '{path:\'' + ${field>name} + '\'}' }" />
                </template:repeat>
            </cells>
        </ColumnListItem>
    </items>
</core:FragmentDefinition>
